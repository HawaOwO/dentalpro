<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Add New Medication"
        android:background="@color/lavender"
        android:textSize="25dp"
        android:gravity="center"
        android:fontFamily="@font/alegreya_sc"
        android:textColor="@color/white"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="5dp"
        android:textColor="@color/brown"
        android:fontFamily="@font/alegreya_sc"
        android:text="Name"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/roundedpopup"
        android:gravity="center"
        android:textColor="@color/gray"
        android:fontFamily="@font/alegreya_sc"
        android:id="@+id/txtName" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="5dp"
        android:textColor="@color/brown"
        android:fontFamily="@font/alegreya_sc"
        android:text="Quantity"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/roundedpopup"
        android:gravity="center"
        android:textColor="@color/gray"
        android:fontFamily="@font/alegreya_sc"
        android:id="@+id/txtQuantity" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="5dp"
        android:textColor="@color/brown"
        android:fontFamily="@font/alegreya_sc"
        android:text="Details"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/roundedpopup"
        android:gravity="center"
        android:textColor="@color/gray"
        android:fontFamily="@font/alegreya_sc"
        android:id="@+id/txtDetail" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:textColor="@color/brown"
        android:fontFamily="@font/alegreya_sc"
        android:text="Expiring Date (dd/Month/yyyy)"/>


    <!-- Date Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <EditText
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/roundedpopup"
            android:gravity="center"
            android:textColor="@color/gray"
            android:fontFamily="@font/alegreya_sc"
            android:id="@+id/txtDay" />

        <!-- Month -->
        <Spinner
            android:id="@+id/spinnerMonth"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/roundedpopup"
            android:textColor="@color/gray"
            android:fontFamily="@font/alegreya_sc"
            android:gravity="center" />

        <!-- Year -->
        <EditText
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/roundedpopup"
            android:gravity="center"
            android:textColor="@color/gray"
            android:fontFamily="@font/alegreya_sc"
            android:id="@+id/txtYear" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="5dp"
        android:textColor="@color/brown"
        android:fontFamily="@font/alegreya_sc"
        android:text="Medication Picture (if any)"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/roundedpopup"
        android:gravity="center"
        android:textColor="@color/gray"
        android:fontFamily="@font/alegreya_sc"
        android:id="@+id/txtPic" />

    <!-- Add the following code for the Type field using Spinner -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="5dp"
        android:textColor="@color/brown"
        android:fontFamily="@font/alegreya_sc"
        android:text="Type"/>

    <Spinner
        android:id="@+id/spinnerType"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/roundedpopup"
        android:textColor="@color/gray"
        android:fontFamily="@font/alegreya_sc"
        android:gravity="center" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="10dp"
        android:text="Save "
        android:textSize="21dp"
        android:textAllCaps="false"
        android:backgroundTint="@color/lavender"
        android:gravity="center"
        android:textColor="@color/white"
        android:fontFamily="@font/alegreya_sc"
        android:id="@+id/btnAdd"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:text="Back "
        android:textSize="21dp"
        android:textAllCaps="false"
        android:backgroundTint="@color/green1"
        android:textColor="@color/white"
        android:fontFamily="@font/alegreya_sc"
        android:gravity="center"
        android:id="@+id/btnBack"/>


</LinearLayout>